<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pretizy.activitytracker">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/newlo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.pretizy.com.pretizy.activitytracker.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pretizy.com.pretizy.activitytracker.ui.EventActivity"
            android:label="@string/title_activity_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pretizy.com.pretizy.activitytracker.ui.CreateEventActivity"
            android:label="@string/title_create_event_activity"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver
            android:name="com.pretizy.com.pretizy.activitytracker.BootReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name="com.pretizy.com.pretizy.activitytracker.ScanBarcodeActivity" />
        <activity android:name="com.pretizy.com.pretizy.activitytracker.QrActivity"/>

        <receiver android:name="com.pretizy.com.pretizy.activitytracker.AlarmReceiver" />
    </application>

</manifest>